<div class="dashboard" id="dashboard">
<!-- User Info -->
    <div id="main-container" class="user_info">
      <center>
        <div class="panel panel-default"> 
            <div class="dashboard-header" id="dashboard-header">
             Kaishahero
            </div>
<div class="user">
        <% @users.each do |user| %>

          <div class="field form-group info"> 
            <label>ID: </label>
              <%= user.id %>
          </div>

          <div class="field form-group info"> 
            <label>First Name: </label>
              <%= user.first_name %>
          </div>

          <div class="field form-group info"> 
            <label>Last Name: </label>
              <%= user.last_name %>
          </div>

          <div class="field form-group info"> 
            <label>Email: </label>
              <%= user.email %>
          </div>

          <div class="field form-group info"> 
            <label>Date of Birth: </label>
              <%= user.date_of_birth%>
          </div>

          <%end%>
          </div>
<div class = "time_entries">
          <table class="table table-striped">
  <thead>
  <h1>Time Entries</h1>
    <tr>
      <th>User</th>
      <th>Day</th>
      <th>Time in</th>
      <th>Time out</th>
      <th>Hours worked</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_entries.each do |time_entry| %>
      <tr>
        <td><%= time_entry.user_id %></td>
        <td><%= time_entry.name %></td>
        <td><%= time_entry.starts_at.try(:to_s, :hours_mins)  %></td>
        <td><%= time_entry.finish_at.try(:to_s, :hours_mins)  %></td>
        <td><%= time_entry.hours_worked%></td>
        <td><%= time_entry.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
