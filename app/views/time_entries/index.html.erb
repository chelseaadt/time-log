<link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
<p id="notice"><%= notice %></p>
<br/><br/><br/><br/>
<table class="table table-striped">
  <thead>
  <h1>Time Entries</h1>
    <tr>
      <th>User</th>
      <th>Day</th>
      <th>Time in</th>
      <th>Time out</th>
      <th>Hours worked</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_entries.each do |time_entry| %>
      <tr>
        <td><%= time_entry.user_id %></td>
        <td><%= time_entry.name %></td>
        <td><%= time_entry.starts_at.try(:to_s, :hours_mins)  %></td>
        <td><%= time_entry.finish_at.try(:to_s, :hours_mins)  %></td>
        <td><%= time_entry.hours_worked%></td>
        <td><%= time_entry.status %></td>
<!--         <td><%= link_to 'Show', time_entry %></td> -->
<!--         <td><%= link_to 'Edit', edit_time_entry_path(time_entry) %></td>
        <td><%= link_to 'Destroy', time_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <% @user_settings = UserSetting.where(:user_id => current_user.id) %>
    <% if @user_settings.present? %>
    <%= link_to 'New Time entry', new_time_entry_path %> 
    <% else %>
    <%= "You currently don't have any user settings ." %>
    <% end %>
